{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "strictNullChecks": false,
        "esModuleInterop": true,
        "pretty": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "importHelpers": true,
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*",
        "environment.d.ts"
    ]
}